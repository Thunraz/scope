{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "vue": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "no-var": "error",
        "no-tabs": "error",
        "indent": [
            "error",
            4
        ],
        "no-console": "warn",
        "no-duplicate-imports": "error",
        "valid-jsdoc": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "no-multi-spaces": "off",
        "lines-between-class-members": [
            "error",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "no-bitwise": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "key-spacing": [
            2,
            {
                "align": "value"
            }
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "block": {
                    "exceptions": [
                        "/"
                    ]
                },
                "line": {
                    "exceptions": [
                        "*/",
                        "*"
                    ]
                }
            }
        ],
        "no-param-reassign": "off",
        "prefer-regex-literals": "off",
        "sort-imports": "error",
        "import/order": "off",
        "import/extensions": "off"
    }
}